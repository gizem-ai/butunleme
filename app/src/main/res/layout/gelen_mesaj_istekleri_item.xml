<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#6E6E6E"
    android:layout_marginTop="8dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gelen_mesajistekleri_item_imgProfil"
            android:layout_width="77dp"
            android:layout_height="77dp"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/gelenMesaj_istekleri_txtMesaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/gelen_mesaj_istekleri_itemLinear"
            android:layout_toRightOf="@+id/gelen_mesajistekleri_item_imgProfil"
            android:text=" Test kullanıcısı mesaj göndermek istiyor"
            android:textColor="#D7D2D2"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:id="@+id/gelen_mesaj_istekleri_itemLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gelen_mesaj_istekleri_imgIptal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                app:tint="#201E1E"></ImageView>

            <ImageView
                android:id="@+id/gelen_mesaj_istekleri_imgOnayla"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                app:tint="#201E1E"
                android:src="@drawable/ic_check"></ImageView>
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>