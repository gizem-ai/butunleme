<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#201E1E"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_diyalog_gelenMesajistekleri_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#201E1E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Proje Ödevi"
            android:textColor="#D7D2D2"
            android:textSize="25sp"
            android:textStyle="bold|italic">

        </TextView>

        <ImageView
            android:id="@+id/custom_diyalog_gelenMesaj_istekleri_imgKapat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_close"></ImageView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/custom_diyalog_gelenMesajistekleri_toolbar"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:id="@+id/customDiyalog_gelen_mesajIstekleri_linner"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="5dp"
            android:background="#000000"
            android:layout_height="30dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesaj İstekleri"
            android:textSize="14sp"
            android:textColor="#D7D2D2"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            ></TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/custom_diyalog_gelenMesajistekleri_recylerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customDiyalog_gelen_mesajIstekleri_linner"
        android:layout_marginTop="8dp"
        android:scrollbars="none"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>