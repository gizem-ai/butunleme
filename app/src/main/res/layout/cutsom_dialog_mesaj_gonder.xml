<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="490dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:background="@drawable/cutom_diaog_mesaj_gonder_bg">

            <EditText
                android:id="@+id/custom_dialog_mesaj_gonder_editMesaj"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/custom_dialog_mesaj_gonder_mesaj_bg"
                android:backgroundTint="#201E1E"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:padding="6dp"
                android:textColor="#D7D2D2">

            </EditText>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="15dp"
                android:id="@+id/custom_dialog_mesaj_gonder_imgIptal"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_dialog_mesaj_gonder_btn_bg"
                android:src="@drawable/ic_close"
                app:tint="#8C8787"></ImageView>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_marginLeft="45dp"
                android:layout_height="90dp"
                android:background="@drawable/custom_dialog_mesaj_gonder_btn_bg"
                android:gravity="center"
                android:id="@+id/custom_dialog_mesaj_gonder_imgGonder"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:tint="#D7D2D2"
                    android:background="@drawable/custom_dialog_mesaj_gonder_btn_bg"
                    android:src="@drawable/ic_message"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GÃ¶nder"
                    android:textColor="#FCD7D2D2"
                    android:textSize="12dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_dialog_mesaj_gonder_imgKullanici"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_centerHorizontal="true"

        ></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textColor="#D7D2D2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/custom_dialog_mesaj_gonder_imgKullanici"
        android:id="@+id/custom_diyalog_mesaj_gonder_txtKullaniciIsim"
        android:textStyle="bold"
        android:layout_height="wrap_content">

    </TextView>

</RelativeLayout>