<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201E1E"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ProfilFragment">

<TextView
    android:layout_width="wrap_content"
    android:text="HesabÄ±m"
    android:textStyle="bold"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="15dp"
    android:textColor="#D7D2D2"
    android:layout_height="wrap_content"
    android:textSize="23sp"
    ></TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profil_fragment_imgUserProfil"
            android:layout_width="156dp"
            android:layout_height="156dp"
            app:civ_border_color="#D7D2D2"
            app:civ_border_width="3dp" />

        <ImageView
            android:id="@+id/profil_fragment_YeniResim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/profil_fragment_imgUserProfil"
            android:layout_alignBottom="@+id/profil_fragment_imgUserProfil"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_camera"></ImageView>

    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/profil_fragment_editIsim"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textStyle="bold"
        android:textColor="#D7D2D2"
        android:enabled="false"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>
<EditText
        android:layout_width="match_parent"
        android:id="@+id/profil_fragment_editmail"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textStyle="bold"
        android:enabled="false"
        android:textColor="#D7D2D2"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>

</LinearLayout>