<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_item_imgProfil"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:civ_border_color="#D7D2D2"
        app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/chat_item_txtMesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_item_imgProfil"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:textColor="#D7D2D2"
        android:layout_toRightOf="@+id/chat_item_imgProfil"
        android:background="@drawable/chat_item_bg_left"
        android:padding="8dp"
        android:textSize="17sp"></TextView>
</RelativeLayout>